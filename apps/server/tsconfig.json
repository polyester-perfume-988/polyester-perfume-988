{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@services/*": [
        "./services/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@root": [
        "./index.ts"
      ],
    },
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts"
  ],
  "outDir": "dist"
}